<h1>Listing posts</h1>


<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-offset-4 col-md-6 showPost"> 
          <table>
            <tr>
              <th>Title</th>
              <th>Text</th>
            </tr>
           
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.text %></td>
                <td><%= post.tags %></td>
              </tr>
            <% end %>
          </table>
        </div>
    </div>
</div>        