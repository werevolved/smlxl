<%= form_for @post do |f| %>
  <p class="postForm">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p class="postForm">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p class="postForm">
    <%= f.label :tags %><br>
    <%= f.text_field :tags %>
  </p>
 
  <p class="postForm">
    <%= f.submit %>
  </p>
<% end %>